{% extends 'base.html.twig' %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Привет! ✅</h1>

    <form class="form-inline my-2 my-lg-0" action="{{ path('post_search') }}" method="get">
        <input class="form-control mr-sm-2" type="search" aria-label="Search" name="t">
        <button class="btn btn-default my-2 my-sm-0" type="submit">Найти.</button>
    </form>

    {% for post in posts %}
        <p><b><a href="{{ path('post_show', {'id': post.id}) }}">{{ post.title }}</a></b></p>
        <p>&nbsp;&nbsp{{ post.body }} </p>
        <p> <i>&nbsp;&nbsp Дата публикации: {{ post.getCreatedAtStr('Y-m-d H:i:s') }} </i></p>
    {% endfor %}
</div>

{% endblock %}
