{% extends 'base2.html.twig' %}

{% block content %}
    {% if content_title is defined %}
        <div class="row">
            <div class="col text-center my-auto">
                <h2> {{ content_title }} </h2>
            </div>
        </div>
    {% endif %}

    {% for post in posts %}
{#
        шаблон для каждой статьи описывается / задаётся непосредственно в блоке ( и в цикле)

        <p><b><a href="{{ path('post_show', {'id': post.id}) }}">{{ post.title }}</a></b></p>
        <p>&nbsp;{{ post.body }} </p>
        <p> <i>&nbsp;&nbsp Автор: {{ post.email }} </i></p>
        <p> <i>&nbsp;&nbsp Дата публикации: {{ post.created_at }} </i></p>
#}
{#
        шаблон для каждой статьи подгружаетсяо в блоке ( и в цикле)
        ес-но имя шаблона можно передать как переменную
        {{ include('posts/_article_tpl.html.twig', {id: post.id, title: post.title, body: post.body, nick: post.email, created_at: post.created_at}) }}
#}

        {#  Сам шаблон - переменная, формируется "снаружи", напр. в контроллере #}
        {{ include(tpl, {id: post.id, title: post.title, intro: post.intro, nick: post.email, created_at: post.created_at}) }}

    {% endfor %}
{#
    Весь блок формируем "снаружи"
    {% autoescape false  %}
        {{ articls }}
    {% endautoescape  %}
#}
{% endblock %}

