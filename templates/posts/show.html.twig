{% extends 'base2.html.twig' %}

{% block content %}
    <p><b>{{ post.title }}</b></p>
    <p>{{ post.body }}</p>
    <p> <i>&nbsp;&nbsp Автор: {{ post.email }} </i></p>
    <p> <i>&nbsp;&nbsp Дата публикации: {{ post.created_at }} </i></p>

    <a href="{{ path('post_edit', {'id': post.id}) }}">Редактировать</a>
    &nbsp;&nbsp;<a href="{{ path('post_delete', {'id': post.id}) }}">Удалить</a>
{% endblock %}